extends common/layout.pug

block content
    - 
        const formatDate = (dateString) => {
        const date = new Date(dateString);
        return date.toLocaleString();}
    main.articles-category
        h1 #{curCategory.name}
        section(class='articles-category__theme-list')
            h2.visually-hidden Список тем
            include common/categories.pug
        section(class='articles-category__list preview')
            h2.visually-hidden Список превью статей
            ul(class='preview__list')
                each article of catArticles
                    li(class='preview__item')
                        ul(class='preview__breadcrumbs')
                            li(class='preview__breadcrumbs-item')
                                a(class='preview__breadcrumbs-link' href='#') Дизайн
                        div(class='preview__background')
                            img(class='preview__background-image' src='img/skyscraper@1x.jpg' width='460' height='240' srcset='img/skyscraper@1x.jpg 1x, img/skyscraper@2x.jpg 2x' alt='Фотография небоскреба')
                        time(class='preview__time') #{formatDate(article.createdDate)}
                        h3(class='preview__name')
                            a(class='preview__name-link' href='#') #{article.title}
                        p(class='preview__text')
                            #{article.announce}
                        a(class='preview__comment' href='#') Комментарии 
                            span(class='preview__cloud')
                            b(class='preview__comment-count')  { #{article.comments.length} }