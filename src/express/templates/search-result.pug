extends common/layout-menu.pug

block content
    main
        section.search-page
            div(class='search-page__wrapper')
                h1 Поиск
                div(class='search search-page__form')
                    form(action='#' method='get')
                        label
                            input(type='text' name='query' placeholder='Что ищем?' value=`${query}`)
                        button(class='search__button button button--transparent' type='submit') Найти
                    each article of results
                        div(class='search__result')
                            time(class='search__date' datetime='') #{article.createdDate}
                            a(href=`/articles/${article.id}` class='search__link') #{article.title}

